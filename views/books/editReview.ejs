<%- include('../partials/header.ejs') %>

<h2>Edit Review</h2>

<form action="/reviews/<%= review._id %>?_method=PUT" method="POST">
  <label>Title</label>
  <input type="text" name="title" value="<%= review.title %>" required />

  <label>Description</label>
  <textarea name="description" required><%= review.description %></textarea>

  <label>Rating</label>
  <input type="number" name="rating" value="<%= review.rating %>" min="1" max="5" required />

  <button type="submit">Update</button>
</form>

